# Database
MONGODB_URI=mongodb://localhost:27017/personal-finance

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server
PORT=3000
NODE_ENV=development

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Finance Companion <your-email@gmail.com>

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Razorpay (Optional)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_BIOMETRIC=true
ENABLE_FAMILY_ROOM=true
ENABLE_AI_INSIGHTS=true
ENABLE_ML_FORECASTING=true

# ML Settings
MIN_TRANSACTIONS_FOR_ML=20
MIN_TRANSACTIONS_FOR_FORECAST=30

# Notification Settings
BUDGET_ALERT_THRESHOLD_1=75
BUDGET_ALERT_THRESHOLD_2=90
BUDGET_ALERT_THRESHOLD_3=100
