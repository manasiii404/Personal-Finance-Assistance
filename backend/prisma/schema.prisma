// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  email            String   @unique
  password         String
  name             String?
  phone            String?
  smsSetupComplete Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  transactions     Transaction[]
  budgets          Budget[]
  goals            Goal[]
  alerts           Alert[]
  createdFamilies  Family[]        @relation("FamilyCreator")
  familyMemberships FamilyMember[]
  goalContributions GoalContribution[]

  @@map("users")
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  date        DateTime
  description String
  amount      Float
  category    String
  type        TransactionType
  source      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

model Budget {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  familyId  String?  @db.ObjectId
  category  String
  limit     Float
  spent     Float @default(0)
  period    BudgetPeriod
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  family Family? @relation(fields: [familyId], references: [id], onDelete: Cascade)

  @@map("budgets")
}

model Goal {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userId   String   @db.ObjectId
  title    String
  target   Float
  current  Float @default(0)
  deadline DateTime
  category String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  familyId String? @db.ObjectId
  family   Family? @relation(fields: [familyId], references: [id], onDelete: Cascade)
  contributions GoalContribution[]

  @@map("goals")
}

model Alert {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  userId    String      @db.ObjectId
  type      AlertType
  title     String
  message   String
  read      Boolean     @default(false)
  actionUrl String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("alerts")
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  type        CategoryType
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("categories")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum BudgetPeriod {
  WEEKLY
  MONTHLY
  YEARLY
}

enum AlertType {
  WARNING
  SUCCESS
  INFO
  ERROR
}

enum CategoryType {
  INCOME
  EXPENSE
  BOTH
}

model Family {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  roomCode  String   @unique
  creatorId String   @db.ObjectId
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  creator User           @relation("FamilyCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members FamilyMember[]
  budgets Budget[]
  goals   Goal[]

  @@map("families")
}

model FamilyMember {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  familyId    String           @db.ObjectId
  userId      String           @db.ObjectId
  role        FamilyRole
  permissions FamilyPermission @default(VIEW_ONLY)
  status      MemberStatus     @default(PENDING)
  joinedAt    DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  family Family @relation(fields: [familyId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  isSharingTransactions Boolean @default(false)

  @@unique([familyId, userId])
  @@map("family_members")
}

enum FamilyRole {
  CREATOR
  ADMIN
  MEMBER
}

enum FamilyPermission {
  VIEW_ONLY
  VIEW_EDIT
}

enum MemberStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model GoalContribution {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  goalId    String   @db.ObjectId
  userId    String   @db.ObjectId
  amount    Float
  date      DateTime @default(now())
  
  // Relations
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("goal_contributions")
}
